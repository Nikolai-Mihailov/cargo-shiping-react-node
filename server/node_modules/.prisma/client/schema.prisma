generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model cargos {
  cargo_id        Int      @id @default(autoincrement())
  user_id         Int
  country_from    String   @db.VarChar(255)
  country_to      String   @db.VarChar(255)
  city_from       String   @db.VarChar(255)
  city_to         String   @db.VarChar(255)
  address_from    String   @db.VarChar(255)
  address_to      String   @db.VarChar(255)
  loading_date    DateTime @db.DateTime(0)
  delivery_date   DateTime @db.DateTime(0)
  circular_course Int      @db.TinyInt
  weight          Int
  size            Int
  cargo_type      String
  vehicle_type    String
  registered      DateTime @default(now()) @db.DateTime(6)
}

model companies {
  company_id       Int            @id @default(autoincrement())
  user_id          Int
  company_name     String         @db.VarChar(255)
  country          String         @db.VarChar(255)
  city             String         @db.VarChar(255)
  street           String         @db.VarChar(255)
  owner_first_name String         @db.VarChar(255)
  owner_last_name  String         @db.VarChar(255)
  phone            Int
  registrationDate DateTime       @default(now()) @db.DateTime(6)
  expirationDate   DateTime       @default(now()) @db.DateTime(6)
  business_type    String
  eik              Int
  postcode         String         @db.VarChar(255)
  users            users          @relation(fields: [user_id], references: [id])
  subscriptions    subscriptions?

  @@index([user_id], name: "FK_ee0839cba07cb0c52602021ad4b")
}

model company_accounts {
  account_id        Int      @id @default(autoincrement())
  company_id        Int
  group_id          Int
  first_name        String   @db.VarChar(255)
  last_name         String   @db.VarChar(255)
  email             String   @db.VarChar(255)
  phone             Int
  registration_date DateTime @default(now()) @db.DateTime(6)
  expiration_date   DateTime @default(now()) @db.DateTime(6)
}

model subscriptions {
  subscription_id   Int       @id @default(autoincrement())
  company_id        Int       @unique
  subscription_type String
  status            String
  registration_date DateTime  @default(now()) @db.DateTime(6)
  expiration_date   DateTime  @default(now()) @db.DateTime(6)
  companies         companies @relation(fields: [company_id], references: [company_id])
}

model users {
  id        Int         @id @default(autoincrement())
  username  String      @db.VarChar(255)
  email     String      @db.VarChar(255)
  password  String      @db.VarChar(255)
  companies companies[]

  @@unique([username, email], name: "IDX_772886e2f1f47b9ceb04a06e20")
}

model users_groups {
  group_id          Int    @id @default(autoincrement())
  group_name        String @db.VarChar(255)
  group_description String @db.VarChar(255)
}
